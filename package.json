{
  "name": "kotori-journal",
  "version": "1.0.0",
  "description": "A terminal-based journal application with AI-powered analysis and daily report generation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "kotori": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "docs/images/icon.png"
  ],
  "engines": {
    "node": ">=22.16.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mk2/kotori-journal.git"
  },
  "homepage": "https://github.com/mk2/kotori-journal#readme",
  "bugs": {
    "url": "https://github.com/mk2/kotori-journal/issues"
  },
  "keywords": [
    "journal",
    "diary",
    "cli",
    "terminal",
    "ai",
    "claude",
    "productivity",
    "daily-report",
    "note-taking"
  ],
  "author": "mk2 <mk2@mk2.red>",
  "license": "ISC",
  "scripts": {
    "dev": "tsx src/cli.tsx",
    "server": "tsx src/cli.tsx server",
    "watch": "tsx watch src/cli.tsx",
    "build": "tsup",
    "test": "vitest run",
    "test:ui": "vitest run --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "prepublishOnly": "npm run test && npm run build"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.56.0",
    "@types/react": "^19.1.7",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "ink": "^6.0.0",
    "ink-select-input": "^6.2.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.1.0"
  }
}
